/* -------------------------------------------------------------------------
 *
 * Vertical Spacing: "Kitchen Sink"
 *
 * Generally Applicable to WYSIWYG containers, the kitchen sink applies
 * vertical spacing to all typography & media elements at once.
 *
 * This class should be used as sparingly as possible.
 *
 * ------------------------------------------------------------------------- */

/* -----------------------------------------------------------------------------
 * Kitchen Sink Vertical Spacing
 *
 * Applicable to the front-end theme only.
 * ----------------------------------------------------------------------------- */

.s-sink > {
	/* -----------------------------------------------------------------------------
	 * First & Last Element Overrides
	 * ----------------------------------------------------------------------------- */

	/* CASE: remove top margin from first element */
	*:first-child {
		margin-top: 0;
	}

	/* CASE: remove bottom margin from bottom element */
	*:last-child {
		margin-bottom: 0;
	}

	/* -----------------------------------------------------------------------------
	 * Images
	 * ----------------------------------------------------------------------------- */

	.wp-block-image {
		margin-top: var(--spacer-60);
		margin-bottom: var(--spacer-60);

		.alignleft,
		.alignright {
			margin-top: var(--spacer-40);
			margin-bottom: var(--spacer-40);

			@media (--viewport-medium) {
				margin-top: 5px;
			}
		}
	}

	/* -----------------------------------------------------------------------------
	 * Audio, Videos, & Embeds: Alignments
	 * ----------------------------------------------------------------------------- */

	.wp-block-audio,
	.wp-block-video,
	.wp-block-embed {
		margin-top: var(--spacer-60);
		margin-bottom: var(--spacer-60);
	}

	/* -----------------------------------------------------------------------------
	 * Overline
	 *
	 * Overrides default selector spacing.
	 * ----------------------------------------------------------------------------- */

	.is-style-t-overline {
		margin-bottom: var(--spacer-20);

		& + * {
			margin-top: var(--spacer-20);
		}
	}

	/* -----------------------------------------------------------------------------
	 * Panels
	 * ----------------------------------------------------------------------------- */

	/* CASE: If a full-bleed block is followed by a non-block element,
	the following element should have some additional vertical spacing. */
	.c-block--full-bleed + *:not(.c-block) {
		margin-top: var(--spacer-60);

		@media (--viewport-medium) {
			margin-top: var(--spacer-70);
		}
	}

	/* CASE: If a non-block element is followed by a full-bleed block,
	the block should have some additional vertical spacing. */
	*:not(.c-block) + .c-block--full-bleed {
		margin-top: var(--spacer-60);

		@media (--viewport-medium) {
			margin-top: var(--spacer-70);
		}
	}
}

/* -----------------------------------------------------------------------------
 * Kitchen Sink Vertical Spacing
 *
 * Applicable to the front-end theme and WP Core blocks in the editor.
 * ----------------------------------------------------------------------------- */

[data-type^="core"],
.s-sink > {
	/* -----------------------------------------------------------------------------
	 * Headings
	 * ----------------------------------------------------------------------------- */

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		margin-top: var(--spacer-60);
		margin-bottom: var(--spacer-20);
	}

	/* -----------------------------------------------------------------------------
	 * Horizontal Rule
	 * ----------------------------------------------------------------------------- */

	hr {
		margin-top: var(--spacer-60);
		margin-bottom: var(--spacer-60);
	}

	/* -------------------------------------------------------------------------
	 * Lists
	 * ------------------------------------------------------------------------- */

	/* Shared */
	ul,
	ol,
	dl {
		margin-top: var(--spacer-40);
		margin-bottom: var(--spacer-40);
	}

	/* List Item */
	ol,
	ul {

		li {

			& ~ li {
				margin-top: var(--spacer-20);
			}
		}
	}

	/* Definition */
	dl {

		dd {
			margin-bottom: var(--spacer-40);
		}
	}

	/* -----------------------------------------------------------------------------
	 * Paragraph
	 * ----------------------------------------------------------------------------- */

	p {
		margin-bottom: var(--spacer-40);
	}

	/* -----------------------------------------------------------------------------
	 * Quote & Blockquote
	 * ----------------------------------------------------------------------------- */

	/* Shared */
	blockquote,
	q {
		margin: var(--spacer-60) auto;
	}

	/* q */
	q {}

	/* blockquote */
	blockquote {

		p {
			margin: 0 auto;

			& ~ p {
				margin-top: var(--spacer-40);
			}
		}
	}

	/* cite */
	cite,
	.wp-block-quote__citation {
		display: block;
		margin-top: var(--spacer-10);
	}

	/* -----------------------------------------------------------------------------
	 * Table
	 * ----------------------------------------------------------------------------- */

	table {
		margin: var(--spacer-60) auto;
	}
}
